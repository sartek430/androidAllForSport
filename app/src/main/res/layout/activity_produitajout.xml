<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ProduitAjout">

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Section"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#C0D6E4"
        android:translationX="50dp"
        android:translationY="320dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="320dp" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Rangée"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#C0D6E4"
        android:translationX="50dp"
        android:translationY="360dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="360dp" />

    <EditText
        android:id="@+id/editTextTextPersonName8"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Module"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#C0D6E4"
        android:translationX="50dp"
        android:translationY="400dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="400dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantité :"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:translationX="150sp"
        android:translationY="450sp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9000"
        android:text="Raffraichir la position"
        android:translationX="75sp"
        android:translationY="150sp"
        tools:layout_editor_absoluteX="16dp"/>

    <Button
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF9800"
        android:translationX="85sp"
        android:translationY="550sp"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/bt_scan"
        android:layout_centerInParent="true"
        android:text="Scan"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajout des produits"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:translationX="40sp"
        android:translationY="60sp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF9000"
        android:text="Ajouter"
        android:translationX="85sp"
        android:translationY="625sp"
        tools:layout_editor_absoluteX="16dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrepot :"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:translationX="150sp"
        android:translationY="210sp"
        tools:layout_editor_absoluteX="-29dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="293dp"
        android:layout_height="36dp"
        android:text="Aucun entrepot"
        android:translationX="50sp"
        android:translationY="240sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="134dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Quantité"
        android:inputType="number"
        android:textColorHint="#C0D6E4"
        android:translationX="120dp"
        android:translationY="475dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="-6dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Etagère"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#C0D6E4"
        android:translationX="50dp"
        android:translationY="280dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/tv_affichage_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="170dp"
        android:text="VILLE ACTUELLE"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>
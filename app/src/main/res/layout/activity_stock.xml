<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Stock">

    <Button
        android:id="@+id/menu"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:backgroundTint="#FF9000"
        android:text="Menu"
        android:translationX="265sp"
        android:translationY="10sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produits en stock"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:translationX="45sp"
        android:translationY="55dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="410dp"
        android:layout_height="530dp"
        android:translationY="190sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom produit"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:translationX="145dp"
        android:translationY="140dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantite"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:translationX="5dp"
        android:translationY="140dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>